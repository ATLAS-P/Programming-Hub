extends simple.jade

block header
    .container
        .row
            .col-xs-10#title_header
                h1
                    a(href="/") Programming Hub
            .col-xs-2
                #profileImage
                    if user
                        a(href="/auth/google")
                            if user.id == "r.mulder"
                                img(src="/img/Rik.png")
                            else if user.id == "o.t.ford"
                                img(src="/img/Ollie.png")
                            else if user.id == "r.m.atema"
                                img(src="/img/Martijn.png")
                            else
                                #profileImageID(name=user.name family=user.surename)
                    else
                        a(href="/auth/google")
                            img(src="https://lh3.googleusercontent.com/-DRxN-2PbFjM/AAAAAAAAAAI/AAAAAAAAAAA/-8ZeTxDsXQg/photo.jpg")

block content_nouser
    .container.center#welcome_message
        p Welcome to the Programming Hub!
        p Please 
            a(href="/auth/google") login
            |&nbsp;with your utwente email address first.
            br
            |You can also login or change user by clicking the icon in the top right.

block footer
    .container
        hr
        .right
            p Programming Hub v. 0.4 © Rik Mulder 2016.
        .left
            a(href="/legal/privacy") Privacy Policy